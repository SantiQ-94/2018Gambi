<div class="modal fade" id="edit_member_<%= user.id %>_modal" tab_index="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<%= form_tag admin_member_path(user), method: "put" do %>

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" daria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4>Editar miembro</h4>
				</div>
				<div class="modal-body">
					<label for="name">Nombre del miembro:</label>
					<input required type="text" name="name" id="name" class="form-control" value="<%= user.name %>">
					<label for="phone">Tel√©fono:</label>
					<input required type="text" name="phone" id="phone" class="form-control" value="<%= user.phone %>">

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
					<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
				</div>
			<% end %>
		</div>
	</div>
</div>