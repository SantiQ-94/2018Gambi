<div class="modal fade" id="delete_member_<%= user.id %>_modal" tab_index="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<%= form_tag admin_member_path(user), method: "delete" do %>

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" daria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4>Eliminar miembro</h4>
				</div>
				<div class="modal-body">
					<p> Esta seguro que quiere eliminar a "<%= user.name %>" de la mesa #<%= @table.id %>?</p>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
					<button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</button>
				</div>
			<% end %>
		</div>
	</div>
</div>