#background_login {
	background-image: url("<%= asset_path 'background.png'%>");
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-position: center top;
	background-size: auto 100%;
	height: 100%
}

.login_text{
	color: white;
}

.table_sector{
	border-color: #212529;
	border-style: solid;
	border-width: 2px;
	border-radius: 5px;
	padding: 5px;
	width: 87%;
}

.sector-separator{
	width: 6%;
	display: inline-block;
}

.table_sector_half{
	width: 40%;
	display: inline-block;
}

.navbar_tables{
	background-color: #212529;
	color: #FFFFFF;
	height: 50px;
}

.login-help{
	text-align: left;
	color: #b4b4b4;
	font-weight: bold;
	font-size: 18px;
}

.login-help:hover{
	cursor: pointer;
	color: #f4f4f4;
}

.modal-login{
	display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); 
}

.modal-login-content {
	background-color: #fefefe;
    margin: 15% auto; /* 15% from the top and centered */
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}

.help-user {
	color: #777777;
	position: relative;
	display: block;
	padding: 15px 15px;
	font-size: 14px;
}

.help-user:hover, .help-user:focus {
	color: #333333;
}

.alert-tables{
	font-weight: bold;
	font-size: 17px;
}

/*esta clase sera utilizada para poner un background en la vista de mesas, tanto para el usuario como para el administrador*/
.tables-background {
	background-image: url("<%= asset_path 'background_tables.png'%>");
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-position: center top;
	background-size: cover;
	opacity: 0.9;
	color: #fff;

}

